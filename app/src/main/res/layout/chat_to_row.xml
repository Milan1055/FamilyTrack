<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="1dp">

    <TextView
        android:id="@+id/textview_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/colorPrimary"
        android:maxWidth="230dp"
        android:padding="15dp"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="my message oih foheoi oqnwfono qodn ff  ee  eeretgwrt oqn oqfdnpqjh-p qo3fninf"
        app:layout_constraintEnd_toStartOf="@+id/imageview_chat_to"
        app:layout_constraintTop_toTopOf="@+id/imageview_chat_to"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_chat_to"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</androidx.constraintlayout.widget.ConstraintLayout>